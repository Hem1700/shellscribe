{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Artifact",
  "type": "object",
  "properties": {
    "schema_id": { "const": "artifact" },
    "schema_version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
    },

    "artifact_id": { "type": "string", "minLength": 1 },
    "path": { "type": "string", "minLength": 1 },
    "checksum": { "type": "string", "minLength": 1 },
    "hash_alg": { "type": "string" },
    "mime": { "type": "string" },
    "size_bytes": { "type": "integer", "minimum": 0 },
    "source": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },

    "provenance": { "$ref": "#/$defs/provenance" },
    "finding_refs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true
    }
  },
  "required": [
    "schema_id",
    "schema_version",
    "artifact_id",
    "path",
    "checksum",
    "source",
    "created_at",
    "provenance"
  ],
  "additionalProperties": false,
  "$defs": {
    "provenance": {
      "type": "object",
      "properties": {
        "source": { "type": "string" },
        "actor": { "type": "string" },
        "tool": { "type": "string" },
        "model": { "type": "string" },
        "module": { "type": "string" },
        "plugin": { "type": "string" },
        "host": { "type": "string" },
        "version": { "type": "string" },
        "task_id": { "type": "string" },
        "event_id": { "type": "string" }
      }
    }
  }
}
