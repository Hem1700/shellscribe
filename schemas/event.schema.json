{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Event",
    "type": "object",
    "properties": {
      "schema_id": { "const": "event" },
      "schema_version": {
        "type": "string",
        "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
      },
      "event_id": { "type": "string", "minLength": 1 },
      "type": { "type": "string", "minLength": 1 },
      "timestamp": { "type": "string", "format": "date-time" },
      "run_id": { "type": "string", "minLength": 1 },
      "payload": { "type": "object" },
      "provenance": { "$ref": "#/$defs/provenance" },
      "tags": {
        "type": "array",
        "items": { "type": "string" },
        "uniqueItems": true
      }
    },
    "required": ["schema_id", "schema_version", "event_id", "type", "timestamp", "run_id", "payload"],
    "additionalProperties": false,
    "$defs": {
      "provenance": {
        "type": "object",
        "properties": {
          "source": { "type": "string" },
          "actor": { "type": "string" },
          "tool": { "type": "string" },
          "model": { "type": "string" },
          "module": { "type": "string" },
          "plugin": { "type": "string" },
          "host": { "type": "string" },
          "version": { "type": "string" },
          "task_id": { "type": "string" },
          "parent_event_id": { "type": "string" }
        }
      }
    }
}